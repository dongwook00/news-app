{
    "extends": [
        "airbnb",
        "airbnb/hooks",
        "plugin:prettier/recommended",
        "prettier/flowtype",
        "prettier/react"
    ],
    "env": {
        "browser": true
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "tabWidth": 4
            }
        ],
        "react/jsx-filename-extension": [1, { "extensions": [ ".js", ".jsx" ] }],
        "indent": ["error", 4, { "SwitchCase": 1 } ],
        "react/jsx-indent": [ "error", 4 ],
        "react/jsx-indent-props": [ "error", 4 ]
    }
}